<View
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    controllerName="okul.Application.Login.controller.Login"
    	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    height="100%">
    <Page showHeader="false">
        <l:FixFlex class="fixFlexVertical">
          <l:flexContent>
            <FlexBox
                class="pageBGImage loginWrapper"
                direction="Column"
                height="100%"
                alignItems="Center"
                justifyContent="Center">
                <items>
                    <FlexBox
                        class="login-content"
                        direction="Column"
                        alignItems="Center"
                        justifyContent="Stretch">
                        <items>
                            <VBox alignItems="Stretch" justifyContent="Stretch" height="100%" width="100%">
                                <VBox class="login-header" alignItems="Center" justifyContent="Center">
                                    <HBox class="logo-text-wrapper">
                                        <Text  text="Giriş"/>
                                    </HBox>
                                </VBox>
                                <VBox
                                    class="login-items-content"
                                    alignItems="Center"
                                    justifyContent="Stretch"
                                    width="100%"
                                    height="100%">
                                    <VBox alignItems="Stretch" justifyContent="Start" width="100%">
                                        <Input
                                            id="userName"
                                            type="Text"
                                            value="{/UserModel/name}"
                                            placeholder="Kullanıcı Adı"/>
                                    </VBox>
                                    <VBox
                                        class="cmp-margin-top"
                                        alignItems="Stretch"
                                        justifyContent="Start"
                                        width="100%">
                                        <Input id="userPass"  value="{/UserModel/pass}"  type="Password"   placeholder="Şifre"/>
                                    </VBox>
									<HBox>
                                    <Button  id="loginBtn" class="sapUiTinyMarginEnd " text="Giriş Yap" type="Emphasized" press="onPress" />
									 <Button  id="registerBtn"   app:url="Register"  text="Kayıt Ol" type="Emphasized" press="onGoRegister"/>
										</HBox>
								</VBox>
                            </VBox>
                        </items>
                    </FlexBox>
                </items>
            </FlexBox>
          </l:flexContent>
        </l:FixFlex>
    </Page>
</View>
