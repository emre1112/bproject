<mvc:View controllerName="okul.Application.Lesson.LessonOnProject.controller.LessonOnProject" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">
    <Table id="LessonOnProject" inset="false" items="{
			path: '/LessonOnProject'
		}">
        <headerToolbar>
            <Toolbar>
                <content>
                    <Title text="Projeler" level="H2"/>
                    <ToolbarSpacer />
                </content>
            </Toolbar>
        </headerToolbar>
        <infoToolbar>
        </infoToolbar>
        <columns>
            <Column width="12em">
                <Text text="Proje ID" />
            </Column>
            <Column width="12em" visible="true" id="Meid">
                <Text text="Proje Öneri Sahibi" />
            </Column>
            <Column minScreenWidth="Tablet">
                <Text text="Proje Adı" />
            </Column>
            <Column minScreenWidth="Desktop">
                <Text text="Proje İçeriği" />
            </Column>
            <Column minScreenWidth="Desktop">
                <Text text="Proje Teknolojileri" />
            </Column>

            <Column minScreenWidth="Desktop">
                <Text text="Proje Dönemi" />
            </Column>
            <Column minScreenWidth="Desktop">
                <Text text="Proje Yayınlanma" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{pjid}" />
                    <Text text="{ufnm}" />
                    <Text text="{pjnm}"/>
                    <Text text="{pjcntn}"/>
                    <Text text="{pjtechnology}" />
                    <Text text="{pjperiod}" />
                    <Text text="{pjselect}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>